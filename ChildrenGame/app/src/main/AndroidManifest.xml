<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hansung.android.childrengame">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".BluetoothActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".VSActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game1OverActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game2OverActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Game3OverActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game3Activity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape"
            android:noHistory="true"/>
        <activity
            android:name=".Game2Activity"
            android:exported="true"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game1Activity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SchoolScoreActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ClassScoreActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>