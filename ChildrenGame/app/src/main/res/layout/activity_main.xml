<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F0F8"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="150dp"
            android:backgroundTint="#2079FF"
            android:fontFamily="@font/cookierunbold"
            android:gravity="center"
            android:onClick="bt_bluetooth"
            android:text="기기 연결하기"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cookierunbold"
        android:text="학교이름"
        android:textColor="#2196F3"
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunbold"
            android:text="1"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunbold"
            android:text=" 학년 "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_main_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunbold"
            android:text="2"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunbold"
            android:text=" 반  "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_main_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunbold"
            android:text="2"
            android:textColor="#000000"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bnt_radius"
        android:backgroundTint="#93B171"
        android:padding="3dp">

        <Button
            android:id="@+id/btn_vsactivity"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:background="@drawable/bnt_radius"
            android:backgroundTint="#A2D864"
            android:fontFamily="@font/cookierunbold"
            android:onClick="bt_vs"
            android:text="학교대항전"
            android:textColor="#000000"
            android:textSize="20dp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bnt_radius"
            android:backgroundTint="#C44E49"
            android:orientation="vertical"
            android:padding="3dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_radius_top"
                android:backgroundTint="#FA6D64"
                android:fontFamily="@font/cookierunbold"
                android:gravity="center"
                android:onClick="bt_game_1"
                android:text="제자리 빨리 뛰기"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_radius_btm"
                android:backgroundTint="#FA6D64"
                android:fontFamily="@font/dreambold"
                android:onClick="bt_game_1"
                android:src="@drawable/marathon"
                android:textColor="#ffffff"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bnt_radius"
            android:backgroundTint="#C7715A"
            android:orientation="vertical"
            android:padding="3dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_radius_top"
                android:backgroundTint="#FF9172"
                android:fontFamily="@font/cookierunbold"
                android:onClick="bt_game_2"
                android:text="우주선 게임"
                android:textColor="#ffffff"
                android:textSize="20dp"


                />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_radius_btm"
                android:backgroundTint="#FF9172"
                android:fontFamily="@font/dreambold"
                android:onClick="bt_game_2"
                android:src="@drawable/rocket"
                android:textColor="#ffffff"
                android:textSize="28dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bnt_radius"
            android:backgroundTint="#D6A617"
            android:orientation="vertical"
            android:padding="3dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_radius_top"

                android:backgroundTint="#FFC107"
                android:fontFamily="@font/cookierunbold"
                android:onClick="bt_game_3"
                android:text="불빛 터치(2인)"
                android:textColor="#ffffff"
                android:textSize="20dp"

                />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_radius_btm"
                android:backgroundTint="#FFC107"
                android:fontFamily="@font/dreambold"
                android:onClick="bt_game_3"
                android:src="@drawable/picnic"
                android:textColor="#ffffff"
                android:textSize="40dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>