<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE0DD"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".VSActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/cookierunbold"
        android:text="대항전"
        android:textColor="#F44336"
        android:textSize="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_vsschool"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="40dp"
            android:background="@drawable/bnt_radius"
            android:backgroundTint="#FF9800"
            android:fontFamily="@font/cookierunbold"
            android:onClick="bt_school_vs"
            android:text="학교대항전"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_vsclass"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="40dp"
            android:background="@drawable/bnt_radius"
            android:backgroundTint="#FFDE07"
            android:fontFamily="@font/cookierunbold"
            android:onClick="bt_class_vs"
            android:text="반대항전"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>


</LinearLayout>