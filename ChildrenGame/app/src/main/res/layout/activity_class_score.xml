<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    tools:context=".ClassScoreActivity">

    <TextView
        android:id="@+id/tv_score_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cookierunbold"
        android:text="반 대 항 전"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_score_school">

        <Button
            android:id="@+id/btn_fragmentA"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_top"
            android:backgroundTint="@color/colorPrimaryGame1"
            android:fontFamily="@font/cookierunbold"
            android:onClick="clickHandler"
            android:text="제자리 달리기"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_fragmentB"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_top"
            android:backgroundTint="@color/colorPrimaryGame2"
            android:fontFamily="@font/cookierunbold"
            android:onClick="clickHandler"
            android:text="우주선 게임"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_fragmentC"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_top"
            android:backgroundTint="@color/colorPrimaryGame3"
            android:fontFamily="@font/cookierunbold"
            android:onClick="clickHandler"
            android:text="불빛 터치"
            android:textColor="#ffffff"
            android:textSize="25dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/VSContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:paddingTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>